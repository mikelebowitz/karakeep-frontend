{
  "gitops": {
    "enabled": true,
    "auto_push": true,
    "batch_commits": true,
    "target_tools": ["Edit", "Write", "MultiEdit", "Bash"],
    "documentation_files": [
      "docs/STATUS.md",
      "docs/development/DEVELOPMENT_LOG.md",
      "CHANGELOG.md", 
      "README.md",
      "CLAUDE.md"
    ],
    "ignore_patterns": [
      "node_modules/*",
      "dist/*",
      ".git/*",
      "*.log"
    ],
    "commit_templates": {
      "Edit": "Update {filename}: {description}",
      "Write": "Create {filename}: {description}",
      "MultiEdit": "Modify {count} files: {description}",
      "Bash": "Execute command: {description}"
    },
    "session_storage": "/tmp/claude-gitops-session.json",
    "max_session_duration": 3600
  },
  "github": {
    "auto_push": true,
    "remote": "origin",
    "branch": "refine-migration",
    "create_releases": false
  },
  "documentation": {
    "update_progress": true,
    "generate_changelog": true,
    "update_readme": true,
    "include_tool_context": true
  }
}